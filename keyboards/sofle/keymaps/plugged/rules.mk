# Build Options
BOOTMAGIC_ENABLE = yes      # Enable Bootmagic Lite
MOUSEKEY_ENABLE = yes       # Mouse keys
EXTRAKEY_ENABLE = yes       # Audio control and System control
CONSOLE_ENABLE = no         # Console for debug
COMMAND_ENABLE = no         # Commands for debug and configuration
NKRO_ENABLE = yes          # Enable N-Key Rollover
BACKLIGHT_ENABLE = no      # Enable keyboard backlight functionality
RGBLIGHT_ENABLE = yes      # Enable keyboard RGB underglow
ENCODER_ENABLE = yes       # Enable rotary encoder
OLED_ENABLE = yes         # Enable OLED display
LTO_ENABLE = yes          # Enable Link Time Optimization
COMBO_ENABLE = yes        # Enable key combos
TAP_DANCE_ENABLE = yes    # Enable tap dance
WPM_ENABLE = yes         # Enable WPM calculation

# Disable unused features to save space
SPACE_CADET_ENABLE = no   # Disable special shift functions
GRAVE_ESC_ENABLE = no     # Disable grave escape
MAGIC_ENABLE = no        # Disable magic keycodes
MUSIC_ENABLE = no        # Disable music mode